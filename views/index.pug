extends layout

block content
  each post in posts
    .card
      .card-body
        h5.card-title(style="font-weight:700;font-size:1.7em;") #[a(href=post.url) #{post.title}]
        h6.card-subtitle.mb-2.text-muted by: #[a.card-link(href= post.author.url + "/posts") #{post.author.username}]
        p.card-text
          | #{post.content}
        a.card-link(href='#') #[i.fas.fa-thumbs-up(style='font-size:1.5em;')]
        |   #{post.likes}
    br
    
  else
    h1 No posts



